<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rmc.lamp.utils.PresentationLayout
        android:id="@+id/presentation"
        android:background="@mipmap/baby_color_bg"
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <com.rmc.lamp.utils.PortraitWrapper
            android:id="@id/portrait"
            app:SecondHaloColor="#96ffffff"
            app:FirstHaloColor="#a5ffffff"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
           <com.rmc.lamp.utils.CircleImageView
                android:layout_width="90dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/pic_holiday"
                android:layout_height="90dp"/>
       </com.rmc.lamp.utils.PortraitWrapper>

</com.rmc.lamp.utils.PresentationLayout>
</RelativeLayout>
