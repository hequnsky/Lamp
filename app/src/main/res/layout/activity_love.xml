<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#318f6a"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_love"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rmc.lamp.mvp.control.ui.LoveActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.shinelw.library.ColorArcProgressBar

        android:layout_marginLeft="26dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/bar"
        app:is_need_content="true"
        app:max_value="100"
        app:back_width="10dp"
        app:front_width="10dp"
        app:total_engle="270"
        app:is_need_unit="true"
        app:string_unit="分贝"
        app:is_need_title="true"
        app:string_title="你的爱达到"
        app:back_color="@android:color/darker_gray"
        android:layout_marginBottom="150dp"
        app:front_color1="#00ff00"
        app:front_color2="#ffff00"
        app:front_color3="#ff0000"
        />


    <TextView
        android:textColor="#78a9a9"
        android:text="别说你爱我有多深，我就想听你喊多大声"
        android:layout_marginBottom="85dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:textColor="#03c1f5"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/roar_but_bg"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/love_start"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="开始"/>
